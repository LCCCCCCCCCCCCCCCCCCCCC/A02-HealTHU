.container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 0;
}

.round-click{
  height: 120rpx;
  width: 120rpx;
  background-color: #39C5BB;
  border-radius: 100%;
  position: fixed;
  bottom: 150rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}
.round-click navigator{
  font-size: 60rpx;
  max-width: 80rpx;
  color: #fff;
  text-align: center;
}

