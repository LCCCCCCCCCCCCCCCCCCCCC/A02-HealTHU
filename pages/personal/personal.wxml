<!--pages/personal/personal.wxml-->
<van-row>
  <van-col span="8" offset="2">
    <van-image round width="6rem" height="6rem" src=""/>
  </van-col>
  <van-col span="10">
    <view class="userinfo-nick">{{userInfo.nickName}}</view>
    <view class="userinfo-id">UID：{{userInfo.id}}</view>
    <button wx:if="{{userInfo.id!=id}}" class="infobutton" bind:tap="changeInfo">关注</button>
    <view wx:else class="empty-line"></view>
  </van-col>
</van-row>

<view class="pages">
  <van-cell-group inset>
    <van-cell class="userinto-sign" title="{{userInfo.sign}}" />
  </van-cell-group>
  <van-cell-group title="成就展示" inset>
    <van-cell is-link clickable
      link-type="navigateTo"
      url="../achievements/achievements?id={{userInfo.id}}">
      <van-row slot="title">
        <van-col span="4">
          <image src="{{achList[0].img}}" style="width: 36px; height: 40px;"/></van-col>
        <van-col span="4">
          <image src="{{achList[1].img}}" style="width: 36px; height: 40px;"/></van-col>
        <van-col span="4">
          <image src="{{achList[2].img}}" style="width: 36px; height: 40px;"/></van-col>
        <van-col span="4">
          <image src="{{achList[3].img}}" style="width: 36px; height: 40px;"/></van-col>
        <van-col span="4">
          <image src="{{achList[4].img}}" style="width: 36px; height: 40px;"/></van-col>
        <van-col span="4">
          <image src="{{achList[5].img}}" style="width: 36px; height: 40px;"/></van-col>
      </van-row>
    </van-cell>
  </van-cell-group>

  <van-cell-group title="动态" inset>
    <van-tabs active="{{ active }}" bind:change="onChange">
      <van-tab title="发帖">
        <van-empty wx:if="{{bbsList.length == 0}}" description="还没有发表过帖子"></van-empty>
        <van-cell wx:for="{{bbsList}}" wx:key="index" 
          clickable size="large" 
          title="{{item.title}}" label="{{item.time}}"
          link-type="navigateTo"
          url="{{item.url}}"/>
      </van-tab>
      <van-tab title="发起活动">
        <van-empty wx:if="{{actaddList.length == 0}}" description="还没有参加过活动"></van-empty>
        <van-cell wx:for="{{actaddList}}" wx:key="index" 
          clickable size="large" 
          title="{{item.title}}" label="{{item.time}}"
          link-type="navigateTo"
          url="{{item.url}}"/>
      </van-tab>
      <van-tab title="参与活动">
        <van-empty wx:if="{{actList.length == 0}}" description="还没有参加过活动"></van-empty>
        <van-cell wx:for="{{actList}}" wx:key="index" 
          clickable size="large" 
          title="{{item.title}}" label="{{item.time}}"
          link-type="navigateTo"
          url="{{item.url}}"/>
      </van-tab>
    </van-tabs>

  </van-cell-group>
  <van-divider />
</view>