<!--pages/bindthu/bindthu.wxml-->
<view class="pages">
<van-cell-group title="如需修改绑定账户，请先解除，再重新绑定" inset>
<van-cell title="绑定中，请勿离开..." wx:if="{{showLoad}}"></van-cell>
  <van-cell title="清华账号">{{ID}}</van-cell>
  <van-cell>
    <van-button wx:if="{{isbind == false}}" bind:tap="bindthu">绑定清华身份</van-button>
    <van-button wx:if="{{isbind == true}}" bind:tap="unbindthu">解除绑定</van-button>
  </van-cell>
</van-cell-group>
<van-cell-group wx:if="{{showbind == true}}" title="信息门户绑定" inset>
  <van-field clearable
    value="{{ username }}"
    label="学号"
    placeholder="请输入学号"
    bind:change="handleIDInput"
    placeholder="{{studentID}}"
  />
  <van-field clearable
    password="{{true}}"
    value="{{ phone }}"
    label="密码"
    bind:change="handlePasswordInput"
  />
  <van-cell>
    <van-button bind:tap="change">确认绑定</van-button>
  </van-cell>
</van-cell-group>
<van-divider />
<van-empty>
    <image slot="image" class="logo" src="../images/logo.png"></image>
  <view slot="description">
    <text>HealTHU V1.0.0</text>
    <view>您的清华账号信息仅会存储在本地，并经加密</view>
  </view>
</van-empty>
<van-divider />

<van-dialog
  title="{{wrongmsg}}"
  show="{{ showwrong }}"
/>
</view>