<!--pages/sleep/sleep.wxml-->
<!-- <view>TODO:近一周睡眠曲线与分析、建议</view> -->
<view class="container">
	<view class="title">
		<view wx:if="{{!isMainChartDisplay}}" class="back-btn" bindtap="backToMainChart">返回</view>
	</view>
  <view class="empty-line"></view>
  <view>{{chartTitle}}</view>
    <canvas canvas-id="columnCanvas" class="canvas" bindtouchstart="touchHandler"></canvas>
    <view wx:if="{{isMainChartDisplay}}" style="text-align:center">点击数据每一项查看详情</view>
    <view wx:if="{{isMainChartDisplay}}">
      <view>您的睡眠质量评分：{{score}}</view>
      <view wx:if="{{isShort == true}}">睡眠时间较少，建议增加睡眠时间</view>
      <view wx:if="{{isLate == true}}">睡眠时间较晚，建议减少熬夜行为</view>
    </view>
</view>