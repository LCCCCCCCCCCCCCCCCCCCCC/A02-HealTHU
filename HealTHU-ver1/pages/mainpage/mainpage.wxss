/* pages/mainpage/mainpage.wxss */
.container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 0;
}
.mainpage{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 0;
}
swiper{
  position: relative;
  margin-top: 15px;
  width:90%;
  height: 120px;
}
.header{
  margin-top: 10px;
  margin-bottom: 5px;
  height: 20px;
  width:80%;
  overflow: auto;
}
.title{
  float:left;
  text-align: left;
  font-size: 12px;
  color:#808080;
}
.edit{
  float:right;
  font-size: 12px;
  height: 20px;
  border: 1px solid black;
}
.todo-list{
  width:82%;
  height:200px;
  border: 2px solid #ad05a5;
  border-radius: 10px;
  overflow:auto;
}
.todo-item{
  margin-top:2px;
  margin-left:2px;
  margin-right:2px;
  height: 50px;
  border: 2px solid #000000;
  border-radius: 5px;
  font-size: 20px;
  color:white;
}
.item-time{
  position: relative;
  margin-left:50px;
  color: black;
  font-size: 16px;
  top: 25rpx;
}
.buttons{
  width:90%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}
.button-act{
  font-size: 10px;
}
.button-spo{
  font-size: 10px;
}
.button-hel{
  font-size: 10px;
}
.button-ach{
  font-size: 10px;
}
.userinfo{
  margin-top: 20px;
}
.social{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
}
.changeinfo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin-top: 20px;
}
.infobutton{
  font-size: 14px;
  margin-left: 5px;
  margin-right: 5px;
}
.settings{
  margin-top:20px;
  width:50%;
}
.tabbar-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 30px; /* 自定义底部导航栏的高度 */
  background-color: #fff; /* 自定义底部导航栏的背景颜色 */
}
custom-tabbar{
  display: flex;
  justify-content: space-between;
  align-items: center;
}